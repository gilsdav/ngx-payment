{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "../dist/out-tsc",
        "baseUrl": ".",
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "../node_modules/@types"
        ],
        "paths": {
            "ngx-payment*": [
                "."
            ]
        },
        "types": [
            "jasmine",
            "webpack"
        ],
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "include": [
        "../demo/src/**/*.ts",
        "../demo/src/**/*.d.ts",
        "**/*.ts",
        "**/*.d.ts"
    ],
    "exclude": [
        "../node_modules"
    ]
}